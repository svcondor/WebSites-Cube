{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    // "strict": true,
    // "outFile": "build/jscript.js",
    "outDir": "build/",
    "module": "es2015",
    "target": "es2015"
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
